<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_civ"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x200"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x100"
            android:src="@mipmap/bg_phone"
            app:civ_border_color="#000000"
            app:civ_border_width="0dp" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civ_icon"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x25"
            android:layout_marginBottom="@dimen/x25"
            android:text="使用过程中有任何疑问，请致电"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0713 - 7330986"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="@dimen/x40"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        />

</LinearLayout>