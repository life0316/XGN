<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/custom_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_civ"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x50"
            android:layout_marginBottom="@dimen/x50"
            android:src="@mipmap/icon_avatar_default"
            app:civ_border_color="#000000"
            app:civ_border_width="0dp" />
        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:src="@mipmap/take_photo_nor"
            android:layout_alignBottom="@+id/profile_civ"
            android:layout_alignEnd="@+id/profile_civ" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/x40"
        >

        <RelativeLayout
            android:paddingTop="@dimen/x20"
            android:paddingBottom="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13761510350"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:drawableRight="@mipmap/icon_next"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/view_line"/>

        <RelativeLayout
            android:id="@+id/sexRl"
            android:paddingTop="@dimen/x20"
            android:paddingBottom="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                />
            <TextView
                android:id="@+id/sexTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:drawableRight="@mipmap/icon_next"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/view_line"/>

        <RelativeLayout
            android:id="@+id/ageRl"
            android:paddingTop="@dimen/x20"
            android:paddingBottom="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄"
                />
            <TextView
                android:id="@+id/ageTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27"
                android:layout_marginRight="@dimen/x5"
                android:layout_toLeftOf="@+id/ageDanwei"
                />
            <TextView
                android:id="@+id/ageDanwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="岁"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:drawableRight="@mipmap/icon_next"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/view_line"/>

        <RelativeLayout
            android:id="@+id/highRl"
            android:paddingTop="@dimen/x20"
            android:paddingBottom="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高"
                />
            <TextView
                android:id="@+id/higtTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="168"
                android:layout_marginRight="@dimen/x5"
                android:layout_toLeftOf="@+id/highDanwei"
                />
            <TextView
                android:id="@+id/highDanwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:drawableRight="@mipmap/icon_next"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/view_line"/>


        <RelativeLayout
            android:id="@+id/weightRl"
            android:paddingTop="@dimen/x20"
            android:paddingBottom="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重"
                />
            <TextView
                android:id="@+id/weightTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="63"
                android:layout_marginRight="@dimen/x5"
                android:layout_toLeftOf="@+id/weightDanwei"
                />
            <TextView
                android:id="@+id/weightDanwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公斤"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:drawableRight="@mipmap/icon_next"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/view_line"/>

        <RelativeLayout
            android:id="@+id/update_pwd"
            android:paddingTop="@dimen/x20"
            android:paddingBottom="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:src="@mipmap/icon_next"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/view_line"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="@dimen/x80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:textColor="@android:color/holo_red_light"
        android:background="@android:color/white"
        />
</LinearLayout>