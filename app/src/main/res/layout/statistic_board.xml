<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/x220"
    android:background="@mipmap/bg_statistic_board"
    android:layout_marginLeft="@dimen/x20"
    android:layout_marginRight="@dimen/x20"
    android:id="@+id/weakMouthLl"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:background="@mipmap/bg_ellipse"
            android:text="本周"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/x40"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日均步数为0步"
                android:gravity="center"
                />
            <TextView
                android:layout_marginTop="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日均里程为0.00千米"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="你还没有达到目标哦，加油！"
        android:gravity="center"
        />

</LinearLayout>