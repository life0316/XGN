<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/birth_dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x20"
            android:layout_marginLeft="@dimen/x40"
            android:text="取消"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/birth_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:padding="@dimen/x20"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginBottom="@dimen/x40"
        android:gravity="center"
        >

        <NumberPicker
            android:id="@+id/birth_dialog_np_year"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/birth_dialog_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="年"
            />
        <NumberPicker
            android:id="@+id/birth_dialog_np_month"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/birth_dialog_tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="月"
            />
        <NumberPicker
            android:id="@+id/birth_dialog_np_day"
            android:layout_width="@dimen/x160"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/birth_dialog_tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="日"
            />

    </LinearLayout>

</LinearLayout>