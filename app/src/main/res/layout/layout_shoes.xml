<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:id="@+id/shoes_show"
    android:visibility="gone"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您绑定的定位鞋"
            android:textSize="18sp"
            android:layout_centerVertical="true"
        />

        <Button
            android:visibility="gone"
            android:id="@+id/deviceEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/x10"
        android:paddingTop="@dimen/x10"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/icon_shoe_big"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/x120"
                    android:layout_height="wrap_content"
                    android:text="设 备 名:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:layout_marginRight="@dimen/x15"
                    android:textAlignment="textEnd"
                    />
                <TextView
                    android:id="@+id/deviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红布林的定位鞋"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/x10"
                >
                <TextView
                    android:layout_width="@dimen/x120"
                    android:layout_height="wrap_content"
                    android:text="设备编码:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:layout_marginRight="@dimen/x15"
                    android:textAlignment="textEnd"
                    />
                <TextView
                    android:id="@+id/deviceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="869758001212342"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/x10"
                >
                <TextView
                    android:layout_width="@dimen/x120"
                    android:layout_height="wrap_content"
                    android:text="MAC地址:"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:layout_marginRight="@dimen/x15"
                    android:textAlignment="textEnd"
                    />
                <TextView
                    android:id="@+id/deviceMac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="869758001212342"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/shoesUnbind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="解绑"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginRight="20dp"
            android:background="@color/colorAccent"
            />

        <Button
            android:id="@+id/shoesConnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="连接"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimary"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>